<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".activities.MainActivity"
    android:background="@drawable/knight">

<!--This is the MAP button which brings you to the map page when clicked-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_button"
        android:onClick="openMap"
        android:id="@+id/map_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#9b1c1c"
        android:background="#fac42f"
        android:textStyle="bold" />

    <!-- This is the DESTINATION button that bring you to the destination page when clicked-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination_button"
        android:onClick="openDest"
        android:id="@+id/dest_button"
        android:width="400dp"
        android:textSize="20dp"
        android:textColor="#9b1c1c"
        android:background="#fac42f"
        android:textStyle="bold"
        android:layout_below="@+id/map_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <!-- This is the welcome sentence located above the buttons-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Calvin Pathfinder!"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/map_button"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#9b1c1c"
        android:shadowColor="#030000"
        android:textSize="23dp" />

    //This is the floor plan button that brings you to the floor plan activity.
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floor_button"
        android:onClick="openTest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:backgroundTint="#ffffff"
        android:width="40dp"
        android:shadowColor="#ffffff"
        android:visibility="invisible" />

    //This is the help document button.
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELP"
        android:id="@+id/help"
        android:textSize="20dp"
        android:textColor="#9b1c1c"
        android:background="#fac42f"
        android:textStyle="bold"
        android:layout_below="@+id/dest_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
